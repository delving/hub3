<ul class="{{eadClass}}" data-parentid="{{parent.model.id}}">
  {{#each children}}
    <li class="{{nodeClass}}">
      <a href="{{eadDocUrl}}" title="{{openClose}} {{unitId}}" class="ead-inventory-link{{#if unitAddressOrChronList}} ead-inventory-link-with-intro{{/if}}"
         data-hasdescendants="{{hasDescendants}}" data-descendantsloaded="{{descendantsLoaded}}" data-nodeid="{{nodeId}}" data-parentid="{{../parent.model.id}}">
        <span class="unit-id-and-title">
          <span class="unit-id">{{unitId}}</span>
          {{#if unitTitle}}
            <span class="unit-title">{{{unitTitle}}}</span>
          {{/if}}
          {{#if unitDate}}
            <span class="unit-date">{{unitDate}}</span>
          {{/if}}
         </span>
      </a>
      {{#if hasDigitalObject}}
        {{#if isFromEDepot}}
          {{#if isDaoType}}
            <span class="digital-object-link">
              <a href="{{eadViewerUrl}}" target="{{viewerLinksTarget}}">
                <i class="fas fa-file" title="{{hasDigitalObjectText}}"></i>
              </a> {{numberOfDigitalObjects}}
            </span>
          {{/if}}
        {{/if}}
      {{/if}}
      {{#if unitAddressOrChronList}}
        <span class="unit-address-or-chronlist">
          {{#each unitAddressOrChronList}}
            <span class="item">{{{this}}}</span>
          {{/each}}
        </span>
      {{/if}}
    </li>
  {{/each}}
  {{#if hasMore }}
    <li class="action" style="display:none;">
      <a href="#" class="load-more-siblings" data-parentid="{{parent.model.id}}">
        <span class="load-more-title">{{translatedLabels.loadMoreNodes}}</span>
      </a>
    </li>
  {{/if}}
</ul>