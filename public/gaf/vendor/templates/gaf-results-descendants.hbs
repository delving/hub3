<div class="gaf-results-descendants">
  <ul class="descendants-list" start="{{startIndex}}">
    {{#each eadSearchResults}}
      <li>
        <a class="unit-id-and-title" href="{{eadDocUrl}}" data-findingAidNo="{{findingAidNo}}"
           title="{{openItem}} {{unitId}}">
          {{#if unitTitleWithHighlighting}}
            <span class="title title-with-highlighting">{{unitId}} {{{unitTitleWithHighlighting}}}</span>
          {{else}}
            <span class="title title-without-highlighting">{{unitId}} {{unitTitle}}</span>
          {{/if}}
        </a>

        {{#if scopeContentWithHighlighting}}
          <span class="content content-with-highlighting">
            {{{scopeContentWithHighlighting}}}
          </span>
        {{else}}
          {{#if scopeContent}}
            <span class="content content-without-highlighting">
              {{{scopeContent}}}
            </span>
          {{/if}}
        {{/if}}

      </li>
    {{/each}}
  </ul>
  {{#if pageLinks }}
    <ul class="descendants-pager list-inline">
      {{#each pageLinks}}
        <li>
          <a href="{{href}}"
             class="{{classes}} list-group-item"
             data-findingAidNo="{{findingAidNo}}"
             data-page="{{page}}">
            {{label}}
          </a>
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>