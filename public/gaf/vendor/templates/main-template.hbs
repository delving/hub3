<div id="na-search-main-container" class="gafsearch na-search-container">
  <form method="GET" class="main-search">

    <div class="row-inner">
      <div class="search-back">
        <a class="go-back" onclick="history.go(-1); return false;"
            href="#na-search-main-container">{{translatedLabels.back}}</a>
      </div>
      <div class="search-form">
        <input type="search" autocapitalize="none" name="searchTerm" class="form-search" value="{{searchTerm}}"
            placeholder="{{translatedLabels.searchPlaceHolder}}" aria-labelledby="searchButton">
        <input type="submit" class="button js-form-submit form-submit" id="searchButton"
            value="{{translatedLabels.search}}"/>
      </div>
    </div>

    <div class="row-inner">
      {{#if tabs }}
        <div class="nav-tabs in-page search-tabs is-collapsible">
          <button class="tab-trigger tabs__tab" title="{{translatedLabels.toggleTabs}}"><span
              class="sr-only">{{translatedLabels.toggleTabs}}</span></button>
          <ul class="target-tabs tabs">
            {{#each tabs}}
              <li {{#if active}}class="active tab tabs__tab" {{else}}class="tab tabs__tab"{{/if}} id="tab-{{key}}"
                  data-target="{{key}}">
                <a href="#tab-content-{{key}}">
                  <span>{{label}}</span>
                  <span class="result-count"></span></a>
              </li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

      {{#if searchResults }}
        <div class="search-filter">
          <a href="#">{{translatedLabels.filter}}</a>
        </div>
        <div class="search-counter">
          <span>{{resultAmountText}} <em>{{searchTerm}}</em></span>
        </div>
      {{/if}}

    </div>

    <!-- SEARCH RESULTS -->
    {{#if searchResults }}
      <div class="search-results">
        {{{searchResults}}}
      </div>
    {{/if}}
    <!-- / END SEARCH RESULTS -->

    {{#if noSearchResults }}
      <div class="search-results">
        <div class="row-inner">
          <div class="no-results">
            {{noSearchResults}}
            {{#if searchTermUrl}}
              {{translatedLabels.or}} <a href="{{searchTermUrl}}">{{translatedLabels.searchWithoutFiltersLabel}}</a>
            {{/if}}
          </div>
        </div>
      </div>
    {{/if}}

  </form>
</div>