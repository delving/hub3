  <div class="row-inner">
    <div class="search-sidebar">
      <button class="close-button" title="{{translatedLabels.closeFilters}}" type="button"><span
          class="sr-only">{{translatedLabels.closeFilters}}</span></button>
      <h2><span>{{translatedLabels.filter}}</span></h2>

      <!--Show empty text if no filters are available.-->
      {{#if facetFields }}
        {{#each facetFields}}
          <div class="form-group">
            <legend class="group-title bg-primary text-white"
                    data-toggle="collapse"
                    data-target="#filtergroup-{{@key}}">
              {{translate ../translatedLabels.facetFieldTitles @key}}
            </legend>
            <div id="filtergroup-{{@key}}" class="filtergroup collapse in">
              {{#each this}}
                <div class="filter form-item-checkbox">
                  <input type="checkbox"
                         name="{{@../key}}"
                         id="{{@key}}-{{name}}-{{id}}"
                         value="{{id}}"
                         {{#if checked}}checked{{/if}} />
                  <label for="{{@key}}-{{name}}-{{id}}">{{translate ../../translatedLabels.facetFieldNames name}} ({{frequency}})</label>
                </div>
              {{/each}}
            </div>
          </div>
        {{/each}}

        {{#each facetDateFields}}
          <div class="form-group">
            <legend class="group-title bg-primary text-white" data-toggle="collapse"
                    data-target="#filtergroup-{{@key}}">
              {{{translate ../translatedLabels.facetFieldTitles @key}}}
            </legend>
            <div id="filtergroup-{{@key}}" class="filtergroup collapse in">
              {{#each buckets}}
                <div class="filter form-item-radiobox">
                  <input type="radio" name="{{@../key}}" class="date-radio" id="{{@../key}}-{{@key}}-{{name}}-{{id}}"
                         value="{{id}}" data-labelTarget="#{{@../key}}-labelTarget"
                         data-label="{{name}} ({{frequency}})"/>
                  <label for="{{@../key}}-{{@key}}-{{name}}-{{id}}">{{name}} ({{frequency}})</label>
                </div>
              {{/each}}
              <div class="filter form-item-radiobox {{#if checked}}visible{{else}}visually-hidden{{/if}}">
                <input type="checkbox" name="{{@key}}Label" id="{{@key}}-labelTarget" class="visually-hidden"
                       value="{{selectedLabel}}" {{#if checked}}checked{{/if}} />
                <input type="radio" name="{{@key}}" class="date-check" id="{{@key}}-input" value="{{selectedValue}}"
                       {{#if checked}}checked{{/if}} />
                <label for="{{@key}}-input">{{selectedLabel}}</label>
              </div>
            </div>
          </div>
        {{/each}}

      {{else}}
        <div class="no-results">
          {{translatedLabels.noFiltersAvailable}}
        </div>

      {{/if}}

    </div>

    <div class="search-ead-content">

      <div class="search-content">

        <div class="filter-settings">

          <!--        <div class="setting setting-display">
                    <label>Weergave</label>
                    <div class="select-wrapper">
